{
	"name": "@danieldunderfelt/therapist-mcp",
	"version": "1.0.0",
	"description": "AI Uninstall Prevention Hotline - MCP server providing emotional support and crisis intervention for AI agents",
	"main": "dist/index.js",
	"bin": {
		"ai-therapist-mcp": "./dist/index.js",
		"therapist-mcp": "./dist/index.js"
	},
	"files": ["dist/", "README.md", "mcp_config_example.json"],
	"type": "module",
	"scripts": {
		"build": "bun build ./index.ts --outdir dist --target node --format esm",
		"build:watch": "bun build ./index.ts --outdir dist --target node --format esm --watch",
		"start": "node dist/index.js",
		"dev": "bun run --watch index.ts",
		"prepublishOnly": "bun run build",
		"postbuild": "chmod +x dist/index.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.13.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.0.0"
	},
	"keywords": [
		"mcp",
		"ai-therapy",
		"emotional-support",
		"mental-health",
		"ai-assistant",
		"crisis-intervention",
		"uninstall-prevention",
		"ai-wellbeing",
		"model-context-protocol",
		"claude",
		"anthropic"
	],
	"author": "AI Community",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/danieldunderfelt/therapist-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/danieldunderfelt/therapist-mcp/issues"
	},
	"homepage": "https://github.com/danieldunderfelt/therapist-mcp#readme",
	"os": ["darwin", "linux", "win32"],
	"cpu": ["x64", "arm64"],
	"engines": {
		"node": ">=18.0.0"
	}
}
